<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/layout_topbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#4CAF50"
        android:paddingStart="5dp"
        android:paddingEnd="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:gravity="center|start"/>

        <ImageView
            android:id="@+id/img_search"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:padding="8dp"
            android:importantForAccessibility="no"
            android:src="@drawable/ic_search" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_note"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_topbar"
        android:layout_marginTop="@dimen/common_10_dp" />

    <ImageView
        android:id="@+id/btn_add"
        android:layout_width="@dimen/size_icon_request_ringtone"
        android:layout_height="@dimen/size_icon_request_ringtone"
        android:layout_alignBottom="@id/rv_note"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/common_5_dp"
        android:layout_marginBottom="@dimen/common_15_dp"
        android:importantForAccessibility="no"
        android:padding="5dp"
        android:src="@drawable/ic_add" />

</RelativeLayout>