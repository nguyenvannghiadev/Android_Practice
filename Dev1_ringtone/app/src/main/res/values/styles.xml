<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="style_text_name_ringtone_row">
        <item name="android:text">@string/app_name</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">@dimen/common_text_size_title</item>
        <item name="android:gravity">start|center</item>
        <item name="android:layout_marginEnd">@dimen/common_five_dp</item>
        <item name="android:layout_marginStart">@dimen/size_bg_ringtone_status</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
</resources>
