<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout_control"/>

    <LinearLayout
        android:id="@+id/layout_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/common_20_dp"
        android:layout_marginEnd="@dimen/common_20_dp">

        <Button
            android:id="@+id/btn_add"
            android:layout_width="0dp"
            android:layout_height="@dimen/common_48_dp"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:background="@drawable/bg_btn_rate_yes"
            android:text="@string/btn_add" />

        <Button
            android:id="@+id/btn_replace"
            android:layout_width="0dp"
            android:layout_height="@dimen/common_48_dp"
            android:layout_weight="1"
            android:text="@string/btn_replace"
            android:textColor="#ffffff"
            android:background="@drawable/bg_btn_rate_yes"
            android:layout_marginStart="@dimen/common_20_dp"/>

    </LinearLayout>

</RelativeLayout>