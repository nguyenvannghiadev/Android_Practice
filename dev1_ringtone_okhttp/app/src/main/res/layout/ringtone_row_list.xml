<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_ringtone_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_bg_ringtone_status"
    android:layout_marginBottom="@dimen/common_eight_dp"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_icon_status_left"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_bg_ringtone_status"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_ringtone_ripple">

        <ImageView
            android:id="@+id/icon_ringtone_status_left"
            android:layout_width="@dimen/size_icon_ringtone_status"
            android:layout_height="@dimen/size_icon_ringtone_status"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/common_16_dp"
            android:importantForAccessibility="no"
            android:src="@drawable/icon_cd" />

        <TextView
            android:id="@+id/ringtone_name"
            style="@style/style_text_name_ringtone_row"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_bg_ringtone_status"
            android:layout_marginStart="@dimen/common_16_dp"
            android:layout_marginEnd="@dimen/common_16_dp"
            android:layout_toEndOf="@+id/icon_ringtone_status_left" />

    </RelativeLayout>

    <View
        android:id="@+id/divider_row"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/common_16_dp"
        android:layout_marginEnd="@dimen/common_16_dp"
        android:background="#33FFFFFF" />

</RelativeLayout>