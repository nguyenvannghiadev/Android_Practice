<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/common_16_dp"
    android:paddingEnd="@dimen/common_16_dp"
    android:id="@+id/ll_item_song"
    android:layout_marginBottom="@dimen/common_eight_dp"
    android:orientation="vertical">

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_48_dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_ringtone_ripple">

        <ImageView
            android:padding="@dimen/common_eight_dp"
            android:src="@drawable/icon_cd_row"
            android:id="@+id/imv_item_image_song"
            android:layout_width="@dimen/common_48_dp"
            android:layout_height="match_parent"
            android:importantForAccessibility="no"
            android:background="@drawable/bg_icon_ringtone">

        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_name_song"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:singleLine="true"
                android:text="@string/app_name"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_item_artist_song"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="-10dp"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:text="@string/app_name"
                android:textColor="@android:color/white" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>